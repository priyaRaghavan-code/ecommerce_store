<h1>Your Cart</h1>

<% if @line_items.any? %>
  <table border="1" cellpadding="5">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @line_items.each do |item| %>
        <tr>
          <td><%= item[:name] %></td>
          <td>₹<%= item[:price] %></td>
          <td>
            <%= button_to "Remove",
                  cart_item_path(item[:product_id]),
                  method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr>

  <p><strong>Subtotal: ₹<%= @subtotal %></strong></p>

  <% if @eligible_for_discount %>
    <p style="color: green;">
      This order qualifies for a 10% discount!
    </p>
  <% end %>

  <br>

  <%= form_with url: "/checkout", method: :post do %>
    <button>Confirm Order</button>
  <% end %>

<% else %>
  <p>Your cart is empty.</p>
  <%= link_to "Go back to products", root_path %>
<% end %>
